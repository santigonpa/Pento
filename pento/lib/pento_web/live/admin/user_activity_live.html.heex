<div class="user-activity-component ml-8">
  <h2>Active users currently viewing games</h2>
  <div :for={ {product_name, users} <- @user_activity }>
    <h3>
      <%= product_name %>
    </h3>
    <ul>
      <li :for={user <- users}>
        <%= user.email %>
      </li>
    </ul>
  </div>
  <p>Total: <%= length(@user_activity) %></p>
</div>